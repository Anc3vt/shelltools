#!/bin/bash

. $ST_HOME/lib/args.sh

find . -not -path '*/\.*' | sort | awk '
{
  n = split($0, parts, "/")
  indent = ""
  for (i = 2; i < n; i++) {
    indent = indent "│  "
  }
  paths[NR] = $0
  levels[NR] = n
  indents[NR] = indent
}

END {
  for (i = 1; i <= NR; i++) {
    prefix = indents[i]
    is_last = 1
    for (j = i + 1; j <= NR; j++) {
      if (levels[j] == levels[i]) break
      if (levels[j] > levels[i]) {
        is_last = 0
        break
      }
    }
    branch = (is_last ? "└─ " : "├─ ")
    name = paths[i]
    sub(".*/", "", name)
    print prefix branch name
  }
}
'
